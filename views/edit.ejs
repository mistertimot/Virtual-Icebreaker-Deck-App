<% include partials/header %>


<div class="container">
		<h1 style="text-align:center;">Edit card</h1>
		<div style="width: 30%; margin: 0 auto;">
			<form action="/deck/<%=card._id%>?_method=PUT" method="POST">
				
				<div class="form-group">
					<select class="custom-select" name="card[category]" required>
						<option disabled selected><%=card.category%></option>
  						<option value="Deep">Deep</option>
 						<option value="Random">Random</option>
  						<option value="Life">Life</option>
						<option value="If you could...">If you could...</option>
 						<option value="Would you rather...">Would you rather...</option>
  						<option value="Experiences">Experiences</option>
					</select>
				</div>
				 
				<div class="form-group">
					<input class="form-control" type="text" name="card[question]" value="<%=card.question%>">
				</div>
				
				<div class="form-group">
					<button class="btn btn-warning btn-md ">Update</button>				
				</div>
				
			</form>
			
			<form action="/deck/<%=card._id%>?_method=DELETE" method="POST">
				<button class="btn btn-danger btn-sm">Delete</button>
			</form>
		</div>	
	
	<p>
		<a class="btn btn-danger btn-md" href="/deck">Cancel</a>
	</p>
</div>



<% include partials/footer %>
